---
import Icon from "astro-icon";
import "../styles/Hero.scss";
import lion1 from "/images/lion1.jpg?url";
import lion2 from "/images/lion2.jpg?url";
import lion3 from "/images/lion3.jpg?url";
import lion4 from "/images/lion4.jpg?url";
import lion5 from "/images/lion5.jpg?url";
import lion6 from "/images/lion6.jpg?url";
import lion7 from "/images/lion7.jpg?url";
import lion8 from "/images/lion8.jpg?url";
import lion9 from "/images/lion9.jpg?url";
import lion10 from "/images/lion10.jpg?url";
---

<section class="hero">
  <div class="hero__top">
    <div class="hero__buttons">
      <a href="#location" class="hero__select select-btn"
        ><Icon class="icon" name="carbon:location" />Get Location</a
      >
      <a href="#map-cart" class="hero__select select-btn"
        ><Icon class="icon" name="iconoir:map" />Zoo Map</a
      >
      <a href="#faq" class="hero__select select-btn"
        ><Icon class="icon" name="ic:outline-contact-support" />Get Advice</a
      >
    </div>
  </div>
  <div class="hero__content">
    <div class="hero__mid">
      <h1 class="hero__title heading">
        LI<span>O<Icon class="icon hero__title--icon" name="mdi:paw" /></span>N
        PARK AGADIR
      </h1>
      <a class="hero__button big-button">Purchase<br />Tickets</a>
    </div>
    <div class="hero__bottom swiper">
      <div
        class="hero__bottom--images swiper-wrapper"
        data-mouse-at="0"
        data-prev-percent="0">
        <div class="hero__image hero__image--1 swiper-slide">
          <img
            class="hero__image-img"
            src={lion1}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--2 swiper-slide">
          <img
            class="hero__image-img"
            src={lion2}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--3 swiper-slide">
          <img
            class="hero__image-img"
            src={lion3}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--4 swiper-slide">
          <img
            class="hero__image-img"
            src={lion4}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--5 swiper-slide">
          <img
            class="hero__image-img"
            src={lion5}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--6 swiper-slide">
          <img
            class="hero__image-img"
            src={lion6}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--7 swiper-slide">
          <img
            class="hero__image-img"
            src={lion7}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--8 swiper-slide">
          <img
            class="hero__image-img"
            src={lion8}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--9 swiper-slide">
          <img
            class="hero__image-img"
            src={lion9}
            alt="lion picture from our lion zoo"
          />
        </div>
        <div class="hero__image hero__image--10 swiper-slide">
          <img
            class="hero__image-img"
            src={lion10}
            alt="lion picture from our lion zoo"
          />
        </div>
      </div>
      <div class="hero__bottom--buttons">
        <button class="hero__buttom--prev">
          <Icon
            class="icon hero__bottom--icon hero__bottom--icon-1"
            name="bi:arrow-up"
          />
        </button>
        <button class="hero__buttom--next">
          <Icon
            class="icon hero__bottom--icon hero__bottom--icon-2"
            name="bi:arrow-up"
          />
        </button>
      </div>
    </div>
  </div>
</section>
<script src="../script/hero.js"></script>
